# Server Configuration
PORT=8000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/meshfund
PGHOST=localhost
PGPORT=5432
PGDATABASE=meshfund
PGUSER=user
PGPASSWORD=password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_SALT_ROUNDS=12

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PRICE_ID=price_your_stripe_price_id_for_subscriptions

PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@meshfund.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Frontend Environment Variables (for mobile app)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
EXPO_PUBLIC_API_URL=http://localhost:8000/api

# CORS Origins (production)
ALLOWED_ORIGINS=https://meshfund.com,https://app.meshfund.com

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_TIMEOUT=7d

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External APIs
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here
KYC_VERIFICATION_API_KEY=your_kyc_api_key_here

# Mobile Money APIs (examples)
MTN_MOMO_API_KEY=your_mtn_momo_api_key
AIRTEL_MONEY_API_KEY=your_airtel_money_api_key
VODAFONE_CASH_API_KEY=your_vodafone_cash_api_key

# Cryptocurrency Payment Processors
COINBASE_COMMERCE_API_KEY=your_coinbase_commerce_api_key
BITPAY_API_KEY=your_bitpay_api_key

# Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token_here
FCM_SERVER_KEY=your_fcm_server_key_here

# Security
HELMET_CSP_NONCE=your_csp_nonce_here
CORS_CREDENTIALS=true

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# AWS Services (if using)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=meshfund-uploads

# Google Services (for OAuth, Maps, etc.)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Feature Flags
ENABLE_KYC_VERIFICATION=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_CRYPTOCURRENCY=false
ENABLE_MOBILE_MONEY=false
ENABLE_REAL_TIME_NOTIFICATIONS=true

# Development Only
ENABLE_API_DOCS=true
ENABLE_DEBUG_LOGGING=true
MOCK_PAYMENT_PROCESSING=false
